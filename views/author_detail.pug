extends layout

block content

    h1 Author: #{title}
    p #{author.lifespan}
    
    div(style='margin-left:20px;margin-top:20px')
    
    h4 Books
    
    each book in books
        dt
            a(href=book.url) #{book.title}
        dd #{book.summary}
    else
        p This author has no books
    hr
    p
        a(href=author.url+'/delete') Delete Author
    p
        a(href=author.url+'/update') Update Author
