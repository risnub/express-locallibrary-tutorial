extends layout

block content

    h1 #{title}
    
    form(method='POST', action='')
        div.form-group
            label(for='name') Genre:
            input#name.form-control(type='text', placeholder='First name(Christian) last',  name='name', required='true', value=(undefined===genre? '':genre.name))
        button.btn.btn-primary(type='submit') Submit
        
    if errors
        ul
            each err in errors
                li!= err.msg
